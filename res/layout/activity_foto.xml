<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pattern"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Foto" >

    <Button
        android:id="@+id/galleriaFoto"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignBaseline="@+id/fotocamera"
        android:layout_alignBottom="@+id/fotocamera"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginRight="44dp"
        android:background="@drawable/gallery"
         />

    <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@string/foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:scaleType="fitXY"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/scegli"
        android:background="@drawable/pattern_pagina"
        />

    <Button
        android:id="@+id/buttonOk"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/conferma" />

    <Button
        android:id="@+id/fotocamera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:background="@drawable/fotocamera" />

</RelativeLayout>